mse version: 2.0.0
game: ledge
short name: Ledge style
full name: The standard ledge style.
icon: card-sample.png
position hint: 1
installer group: ledge-standard/style

version: 2017-10-13

depends on: 
	package: ledge-standard.mse-game
	version: 2017-10-13

depends on:
	package: ledge-standard-symbol-font.mse-symbol-font
	version: 2017-10-13

depends on:
	package: ledge-watermarks.mse-include
	version: 2017-10-13

depends on:
	package: ledge-energy-large.mse-symbol-font
	version: 2017-10-13

depends on:
	package: ledge-energy-small.mse-symbol-font
	version: 2017-10-13

depends on:
	package: ledge-default-image.mse-include
	version: 2017-10-13

card width: 375
card height: 523
card dpi: 150

card background: rgb(200,200,200)

############################################################## Extra scripts
init script:
	# Load scripts for image box
	include file: /ledge-default-image.mse-include/scripts
	
	#Should multicolor sources with basic source keywords have a colored name?
	mask_multi_source_with_color := { styling.colored_multicolor_source_name }
	
	# Use the normal down symbol
	energy_d := {
		if      styling.down_symbol == "old"        then "old"
		else if styling.down_symbol == "diagonal D" then "older"
		else                                            "new"
	}
	
	# Is the card a promo card?
	is_promo := { styling.promo }
	
############################################################## Set info fields
set info style:
	symbol:
		variation:
			name: invertedcommon
			border radius: 0.10
			fill type: solid
			fill color:   rgb(255,255,255)
			border color: rgb(0,0,0)

############################################################## Extra style options
styling field:
	type: boolean
	name: grey hybrid name
	description: Use a grey background for the name and type line on hybrid cards. This is done on real cards.
styling field:
	type: boolean
	name: colored multicolor source name
	description: Use a colored background for the name and type on multicolor source cards with a basic source type. This is done on real cards.
styling field:
	type: choice
	name: down symbol
	description: What down and up symbols should be used on cards?
	initial: modern
	choice: modern
	choice: old
	choice: diagonal T
styling field:
	type: package choice
	name: text box energy symbols
	match: ledge-energy-*.mse-symbol-font
	initial: ledge-energy-small.mse-symbol-font
styling field:
	type: choice
	name: center text
	description: When to center text (short text only means only on one-line cards with no flavor text)
	choice: always
	choice: short text only
	choice: never
	initial: never
styling field:
	type: boolean
	name: promo
	description: Is this card a promo card, with the "P" rarity?
	initial: no
styling field:
	type: boolean
	name: inverted common symbol
	description: Should the common rarity symbol be inverted, like in Coldsnap?
	initial: no
styling field:
	type: package choice
	name: overlay
	description: Should there be an overlay applied, such as foil?
	match: ledge-overlay-*.mse-include
	required: false
styling style:
	down symbol:
		render style: both
		choice images:
			modern:     /ledge-energy-large.mse-symbol-font/energy_t.png
			old:        /ledge-energy-large.mse-symbol-font/energy_t_old.png
			diagonal T: /ledge-energy-large.mse-symbol-font/energy_t_older.png
	center text:
		render style: both
		choice images:
			always:          /ledge-standard.mse-game/icons/center-all-text.png
			short text only: /ledge-standard.mse-game/icons/center-short-text.png
			never:           /ledge-standard.mse-game/icons/center-no-text.png
	inverted common symbol:
		choice images:
			no:  { symbol_variation(symbol: set.symbol, variation: "common") }
			yes: { symbol_variation(symbol: set.symbol, variation: "invertedcommon") }